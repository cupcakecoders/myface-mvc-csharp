<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyFace</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="header-container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MyFace</a>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Posts" asp-action="PostsPage">Posts</a>
                    </li>
                    <li id="new-post-modal-btn" class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Posts" asp-action="CreatePostPage">New Post</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="UsersPage">Our Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="CreateUserPage">Join Us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
        <div id="new-post-modal-overlay" class="modal-overlay">
            <div id="new-post-modal-menu" class="modal-menu">
                <span id="new-post-modal-close-btn" class="close-btn">&times;</span>
                <p>this is the text inside the modal</p>
                <form asp-controller="Posts" asp-action="CreatePost" method="post">
                    <label for="userid">User ID:</label><br>
                    <input type="text" id="userid" name="userid"><br>
                    
                    <label for="message">Message:</label><br>
                    <input type="text" id="message" name="message"><br>
                    
                    <label for="imageurl">Image URL:</label><br>
                    <input type="url" id="imageurl" name="imageurl"><br>
                    
                    <input type="submit" value="Submit">
                </form>
            </div>
        </div>
    <div class="footer-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - MyFace - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
